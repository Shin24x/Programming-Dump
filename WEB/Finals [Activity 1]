===PHP FILE===
<html>
<body>

<?php
$i = $_GET['color'];
if($i == "yellow"){
    echo "<h1><font color='yellow'>$_GET[text]</font></h1>";
}
if($i == "blue"){
    echo "<h1><font color='blue'>$_GET[text]</font></h1>";
}
if($i == "orange"){
    echo "<h1><font color='orange'>$_GET[text]</font></h1>";
}
?>

<?php
$i = $_GET['font'];
if($i == "hel"){
    echo '<html style="font-family: Helvetica">';
}
if($i == "bs"){
    echo '<html style="font-family: Brush Script MT">';
}   
if($i == "cn"){
    echo '<html style="font-family: Courier New">';
}
?>

<?php
$i = $_GET['bg'];
if($i == "pink"){
    echo '<body style="background-color:pink">';
}
if($i == "red"){
    echo '<body style="background-color:red">';
}
if($i == "lime"){
    echo '<body style="background-color:lime">';
}
?>

</body>
</html>
